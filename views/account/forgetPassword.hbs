{{#section 'css'}}
    <link rel="stylesheet" href="/stylesheets/SignIn.css"> 
{{/section}}
    
    <div class="d-flex justify-content-between align-items-center">
        <div class="left-body"></div>

        <div class="body">
            <div class="d-flex justify-content-center mb-3 mt-3">
                <a class="navbar-brand d-flex align-items-center logo" href="#">
                    <div class="d-inline-block me-2 logo-icon">4P</div>
                    NEWS
                </a>
            </div>
            <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                <form action="/account/forgetPassword" method="POST">
                    <div class="text-center mb-3">
                        <p class="title">Quên mật khẩu</p>
                    </div>

                    <div class="d-flex justify-content-center mb-3">
                        <div class="sub-body">
                            <!-- Email input -->
                            <div class="form-floating mb-3">
                                <input type="email" class="form-control" id="floatingInput"
                                    placeholder="name@example.com" name="user[email]">
                                <label for="floatingInput">Email</label>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mb-3">
                        <button class="btn btn-primary sub-body" type="submit">Gửi mã OTP</button>
                    </div>
                    
                    <div class="text-center">
                        <p>Đã có tài khoản? <a href="/account/signIn">Đăng nhập ngay</a></p>
                    </div>
                    <div class="text-center">
                        <p>Chưa có tài khoản? <a href="/account/signUp">Đăng ký ngay</a></p>
                    </div>
                </form>
            </div>
        </div>

        <div class="right-body"></div>
    </div>
