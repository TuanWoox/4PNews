{{#section 'js'}}
<script>
    function initCarousel(carouselId) {
        const prevBtn = document.querySelector(`#${carouselId} .btn-prev`);
        const nextBtn = document.querySelector(`#${carouselId} .btn-next`);
        const track = document.querySelector(`#${carouselId} .news-track`);
        const items = Array.from(document.querySelectorAll(`#${carouselId} .news-item`));
        const visibleCount = 4; // Number of visible items
        const totalItems = items.length;

        let currentIndex = 0; // Keeps track of the starting position of visible items
        let isAnimating = false; // Prevent rapid clicking

        function updateCarousel(animate = true) {
            const totalVisibleItems = visibleCount; // Visible items = 4
            const totalBufferItems = 4; // Add 2 buffer items for smooth scroll
            const totalNeededItems = totalVisibleItems + totalBufferItems;

            if (animate) {
                track.classList.add("animate");
            } else {
                track.classList.remove("animate");
            }

            // Ensure the track always shows the correct number of items
            track.innerHTML = ""; // Clear existing items
            for (let i = 0; i < totalNeededItems; i++) {
                const index = (currentIndex + i - 1 + totalItems) % totalItems; // Circular index
                const clonedItem = items[index].cloneNode(true);
                track.appendChild(clonedItem);
            }

        }
        function handleNavigation(direction) {
            if (isAnimating) return; // Prevent rapid clicks
            isAnimating = true;

            if (direction === "next") {
                currentIndex = (currentIndex + 1) % totalItems;
                track.style.transform = "translateX(-50%)"; // Move next
            } else {
                currentIndex = (currentIndex - 1 + totalItems) % totalItems;
                track.style.transform = "translateX(0%)"; // Move previous
            }

            // Wait for transition to finish, then reset
            setTimeout(() => {
                updateCarousel(false);
                isAnimating = false;
            }, 300); // Match the CSS transition time
        }

        nextBtn.addEventListener("click", () => handleNavigation("next"));
        prevBtn.addEventListener("click", () => handleNavigation("prev"));

        // Initialize the carousel display
        updateCarousel(false);
    }
    initCarousel("carousel-newest");
    initCarousel("carousel-hot");
    initCarousel("carousel-hot-cate")

</script>
