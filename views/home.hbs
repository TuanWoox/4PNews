{{#section 'js'}}
<script>
    function initCarousel(carouselId) {
        const prevBtn = document.querySelector(`#${carouselId} .btn-prev`);
        const nextBtn = document.querySelector(`#${carouselId} .btn-next`);
        const track = document.querySelector(`#${carouselId} .news-track`);
        const items = Array.from(document.querySelectorAll(`#${carouselId} .news-item`));
        const visibleCount = 4; // Number of visible items
        const totalItems = items.length;

        let currentIndex = 0; // Keeps track of the starting position
        let isAnimating = false; // Prevent rapid clicking

        if (totalItems === 0) {
            console.error(`Carousel "${carouselId}" has no items to display.`);
            return; // Stop if no items are present
        }

        function updateCarousel() {
            // Clear existing content
            track.innerHTML = "";

            // Add only visible items
            for (let i = 0; i < visibleCount; i++) {
                const index = (currentIndex + i) % totalItems; // Circular index
                const clonedItem = items[index].cloneNode(true);
                track.appendChild(clonedItem);
            }

            // Reset transform for smooth scrolling
            track.style.transition = "none";
            track.style.transform = `translateX(0)`;
        }


        function handleNavigation(direction) {
            if (isAnimating) return; // Prevent rapid clicks
            isAnimating = true;

            const moveAmount = direction === "next" ? -100 : 100;
            track.style.transition = "transform 0.3s ease-in-out";
            track.style.transform = `translateX(calc(-${100 / (visibleCount + 1)}% + ${moveAmount}%))`;

            setTimeout(() => {
                // Update current index and reset position
                currentIndex = (currentIndex + (direction === "next" ? 1 : -1) + totalItems) % totalItems;
                updateCarousel();
                isAnimating = false;
            }, 300); // Match CSS transition duration
        }

        nextBtn?.addEventListener("click", () => handleNavigation("next"));
        prevBtn?.addEventListener("click", () => handleNavigation("prev"));

        // Initialize the carousel display
        updateCarousel();
    }

    // Initialize all carousels
    document.querySelectorAll(".news-carousel-container").forEach((carousel) => {
        const id = carousel.id;
        initCarousel(id);
    });
</script>

