    <!-- button duyệt -->
    <script>
      // Lấy các phần tử
      const postButton = document.querySelector(".btn.btn-success.btn-push");
      const overlay = document.getElementById("overlay");
      const closeOverlay = document.getElementById("close-overlay");

      // Hiển thị overlay khi bấm nút "Đăng bài"
      postButton.addEventListener("click", () => {
        overlay.style.display = "flex"; // Hiển thị với flexbox
      });

      // Đóng overlay khi bấm vào nút "xác nhận"
      closeOverlay.addEventListener("click", () => {
        overlay.style.display = "none";
      });

      // Đóng overlay khi bấm ra ngoài nội dung
      overlay.addEventListener("click", (e) => {
        if (e.target === overlay) {
          overlay.style.display = "none";
        }
      });
    </script>
